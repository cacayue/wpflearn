<Window x:Class="BindingForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="600">
    <StackPanel>
        <TextBox x:Name="textBoxName" BorderBrush="Black" Margin="5" Height="80"></TextBox>
        <Button Content="Add Age" Margin="5" Click="Button_Click" Height="40"></Button>
    </StackPanel>
</Window>
